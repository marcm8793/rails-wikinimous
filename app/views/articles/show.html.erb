<div class="container">
  <h1 class="d-flex">
    <%=@article.title %>

    <%= link_to edit_article_path(@article) do %>
      <i class="fa-solid fa-pen-to-square ms-4 me-1"></i>
    <% end %>

    <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>

  </h1>
  <p><%=@article.content %></p>
</div>
